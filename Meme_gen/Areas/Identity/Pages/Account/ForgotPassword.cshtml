@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 border-0 rounded-3" style="max-width: 500px; width: 100%;">
        <div class="text-center">
            <h1 class="fw-bold">@ViewData["Title"]</h1>
            <h5>Enter your email.</h5>
            <hr />
        </div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center" role="alert"></div>
            
            <!-- Wider email input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control shadow-sm rounded-pill w-100" 
                    autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>
            
            <!-- Wider Reset Password button -->
            <button type="submit" class="btn btn-lg btn-danger shadow rounded-pill w-100">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
